{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strictPropertyInitialization": true
  },
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/utils" },
    { "path": "./packages/services" },
    { "path": "./packages/tools" },
    { "path": "./packages/core" },
    { "path": "./packages/cli" }
  ],
  "files": [],
  "include": [],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}